# Server Configuration
PORT=8000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/objekthub

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# S3 Storage (Backblaze B2)
S3_ENDPOINT=https://s3.us-west-004.backblazeb2.com
S3_ACCESS_KEY=your_backblaze_key_id
S3_SECRET_KEY=your_backblaze_application_key
S3_BUCKET=your-bucket-name
S3_REGION=us-west-004

# CDN Configuration (Cloudflare Worker)
# If not set, will use S3_ENDPOINT directly
CDN_URL=https://cloudflare-b2.objekt-hub.workers.dev

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,exp://*

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
