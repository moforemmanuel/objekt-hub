{
  "compilerOptions": {
    "lib": ["es2020"],
    "target": "es2020",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node"
  },
  "exclude": ["node_modules", "dist"]
}
